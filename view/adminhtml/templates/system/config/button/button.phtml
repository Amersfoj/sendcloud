<script>
    require([
        'jquery',
        'prototype'
    ], function($){
        $('#connectToSendcloud').click(function () {
            $.ajax({
                url: "<?php echo $block->getAjaxCheckUrl() ?>",
                method: 'POST',
                data: {form_key: window.FORM_KEY},
                success: function (response) {
                    window.open(response.url,'_blank');
                }
            })

        });

    });
</script>